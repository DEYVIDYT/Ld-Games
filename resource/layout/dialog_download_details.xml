<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalhes do Download"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_file_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_file_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/tv_file_name_label"
        app:layout_constraintStart_toEndOf="@id/tv_file_name_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_page_url_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Página:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_file_name_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_page_url_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@id/tv_page_url_label"
        app:layout_constraintStart_toEndOf="@id/tv_page_url_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_download_url_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Link:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_page_url_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_download_url_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@id/tv_download_url_label"
        app:layout_constraintStart_toEndOf="@id/tv_download_url_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_file_path_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Caminho:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_download_url_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_file_path_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@id/tv_file_path_label"
        app:layout_constraintStart_toEndOf="@id/tv_file_path_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_file_size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tamanho:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_file_path_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_file_size_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/tv_file_size_label"
        app:layout_constraintStart_toEndOf="@id/tv_file_size_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_downloaded_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Completos:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_file_size_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_downloaded_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/tv_downloaded_label"
        app:layout_constraintStart_toEndOf="@id/tv_downloaded_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_avg_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Velocidade média:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_downloaded_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_avg_speed_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/tv_avg_speed_label"
        app:layout_constraintStart_toEndOf="@id/tv_avg_speed_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_date_added_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adicionado em:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_avg_speed_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_date_added_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/tv_date_added_label"
        app:layout_constraintStart_toEndOf="@id/tv_date_added_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fechar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/tv_date_added_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
